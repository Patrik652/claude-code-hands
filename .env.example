# Claude Vision & Hands - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# Gemini AI API Key (required)
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Operating mode: development, staging, production
CLAUDE_VISION_MODE=production

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Data directory for persistent storage
DATA_DIR=~/.claude-vision-hands

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable strict security mode (recommended for production)
SECURITY_STRICT_MODE=true

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per minute (default)
RATE_LIMIT_DEFAULT=60

# Maximum prompt length
MAX_PROMPT_LENGTH=10000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_TOKEN=default-token

# ChromaDB Persistent Storage
CHROMA_DATA_PATH=~/.claude-vision-hands/memory/chroma

# =============================================================================
# REDIS CACHE (Optional but recommended)
# =============================================================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=default-password

# Redis Database Number
REDIS_DB=0

# =============================================================================
# RECORDER SETTINGS
# =============================================================================

# Enable automatic workflow recording
RECORDER_AUTO_CAPTURE=false

# Enable screenshot capture
RECORDER_SCREENSHOTS_ENABLED=true

# Screenshot quality (1-100)
RECORDER_SCREENSHOT_QUALITY=85

# Screenshot format (png, jpg)
RECORDER_SCREENSHOT_FORMAT=png

# Maximum workflow size (number of actions)
RECORDER_MAX_WORKFLOW_SIZE=1000

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Gemini Model
GEMINI_MODEL=gemini-2.0-flash-exp

# Gemini Max Tokens
GEMINI_MAX_TOKENS=8000

# Gemini Temperature (0.0-1.0)
GEMINI_TEMPERATURE=0.1

# Gemini Timeout (seconds)
GEMINI_TIMEOUT=30

# Vision Analysis Cache TTL (seconds)
VISION_CACHE_TTL=3600

# =============================================================================
# MEMORY SYSTEM
# =============================================================================

# Enable memory system
MEMORY_ENABLED=true

# Auto-store successful actions
MEMORY_AUTO_STORE=true

# Embedding model
MEMORY_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Embedding device (cpu, cuda, mps)
MEMORY_EMBEDDING_DEVICE=cpu

# Memory retention (days)
MEMORY_RETENTION_DAYS=30

# Maximum memories to store
MEMORY_MAX_MEMORIES=100000

# =============================================================================
# AUTONOMOUS AGENT
# =============================================================================

# Enable autonomous agent
AGENT_ENABLED=true

# Decision confidence threshold (0.0-1.0)
AGENT_CONFIDENCE_THRESHOLD=0.7

# Maximum retries for actions
AGENT_MAX_RETRIES=3

# Agent timeout (seconds)
AGENT_TIMEOUT=300

# Enable learning from failures
AGENT_LEARN_FROM_FAILURES=true

# =============================================================================
# API SERVER
# =============================================================================

# API Server Host
API_HOST=0.0.0.0

# API Server Port
API_PORT=8081

# Enable CORS
API_CORS_ENABLED=true

# =============================================================================
# MCP SERVER
# =============================================================================

# MCP Server Host
MCP_HOST=localhost

# MCP Server Port
MCP_PORT=8080

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Enable Prometheus metrics
MONITORING_ENABLED=true

# Metrics collection interval (seconds)
MONITORING_INTERVAL=60

# Prometheus port
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000

# =============================================================================
# AUDIT LOGGING
# =============================================================================

# Enable audit logging
AUDIT_ENABLED=true

# Audit log directory
AUDIT_LOG_DIR=~/.claude-vision-hands/logs

# Log rotation (daily, weekly, monthly)
AUDIT_ROTATION=daily

# Log retention (days)
AUDIT_RETENTION_DAYS=90

# Log format (json, text)
AUDIT_LOG_FORMAT=json

# =============================================================================
# PERFORMANCE
# =============================================================================

# Number of worker processes
PERFORMANCE_WORKERS=4

# Maximum concurrent tasks
PERFORMANCE_MAX_CONCURRENT_TASKS=10

# Queue size
PERFORMANCE_QUEUE_SIZE=100

# Cache backend (memory, redis)
PERFORMANCE_CACHE_BACKEND=redis

# Cache max size (MB)
PERFORMANCE_CACHE_MAX_SIZE_MB=100

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Enable profiling
PROFILING_ENABLED=false

# =============================================================================
# DOCKER-SPECIFIC
# =============================================================================

# Docker network name
DOCKER_NETWORK=claude-network

# Docker volumes prefix
DOCKER_VOLUME_PREFIX=claude

# =============================================================================
# BROWSER CONTROL (Future)
# =============================================================================

# Enable browser control
BROWSER_ENABLED=false

# Browser headless mode
BROWSER_HEADLESS=true

# Browser timeout (seconds)
BROWSER_TIMEOUT=30

# =============================================================================
# DESKTOP CONTROL (Future)
# =============================================================================

# Enable desktop control
DESKTOP_ENABLED=false

# Desktop failsafe mode
DESKTOP_FAILSAFE=true

# Desktop pause between actions (seconds)
DESKTOP_PAUSE=0.1
